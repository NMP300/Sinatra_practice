<!DOCTYPE html>
  <head>
    <meta charset='utf-8'>
    <link rel="stylesheet" href="">
    <title>メモアプリ</title>
  </head>
<body>
  <div class="container">
    <header class="header">
      <h1 class="header__title">メモアプリ</h1>
    </header>
    <div class="main">
      <h2 class="main__title"><%= @memo_title %></h2>
      <p class="main__body"><%= @memo_body %></p>
    </div>
    <div class="btn">
      <button class="edit__btn" type="submit" onclick="location.href='/memos/<%= @memo_id %>/edit'">編集</button>
      <form method="post" action="/memos/<%= @memo_id %>" >
        <button class="delete__btn" type="submit", name="_method", value="DELETE">削除</button>
      </form>
    </div>
    <div class="footer">
      <footer class="footer">
        <h2>@NMP</h2>
      </footer>
    </div>
  </div>
</body>